# ┌────────────────────────────────────────────┐
# │        Application Environment Setup       │
# └────────────────────────────────────────────┘

VITE_REACT_APP_ENV=development                 # Current environment: development, staging, production
VITE_REACT_APP_VERSION=1.0.0                   # App version for tracking builds

# ┌────────────────────────────────────────────┐
# │           API Endpoint Configuration       │
# └────────────────────────────────────────────┘

VITE_REACT_APP_API_BASE_URL=http://localhost:5000              # Default API base URL (local dev)
VITE_REACT_APP_API_PROD_URL=https://api.yourdomain.com         # Production API URL
VITE_REACT_APP_API_STAGE_URL=https://staging.yourdomain.com    # Staging API URL

# ┌────────────────────────────────────────────┐
# │         Authentication & Security Keys     │
# └────────────────────────────────────────────┘

VITE_REACT_APP_AUTH_TOKEN_KEY=token            # LocalStorage key for auth token
VITE_REACT_APP_USER_ROLE_KEY=userRole          # LocalStorage key for user role

# ┌────────────────────────────────────────────┐
# │           Feature Flags & Toggles          │
# └────────────────────────────────────────────┘

VITE_REACT_APP_ENABLE_LOGGING=true             # Enable verbose logging in dev
VITE_REACT_APP_USE_MOCK_API=false              # Toggle mock API usage

# ┌────────────────────────────────────────────┐
# │           Third-Party Integrations         │
# └────────────────────────────────────────────┘

VITE_REACT_APP_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X           # Google Analytics tracking ID
VITE_REACT_APP_SENTRY_DSN=https://example@sentry.io/12345    # Sentry error tracking

# ┌────────────────────────────────────────────┐
# │           UI & Branding Settings           │
# └────────────────────────────────────────────┘

VITE_REACT_APP_BRAND_NAME=EduPortal             # App name for display
VITE_REACT_APP_THEME=light                      # Default theme: light or dark
